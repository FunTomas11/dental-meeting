.menu
  width 96%
  position: absolute
  display: flex
  justify-content space-around
  align-items center
  height 75px
  background-color: #fff;
  margin-top -35px
  margin-right 30px
  margin-left 30px
  box-shadow shadow
  font-size 22px
  z-index 11
  border-radius 10px
    
  &__item
    text-decoration none
    color #162a00
    flex 1 1 auto
    height 100%
    display flex
    flex-direction column
    align-items center
    justify-content center
    transition background-color .25s ease
    &:hover
      color #fff
      background-color accent-color
	

.menu__item:first-child
  border-radius 10px 0 0 10px
.menu__item:last-child
  border-radius 0 10px 10px 0
  
.mobile-menu {
  display: none;
}
	 
