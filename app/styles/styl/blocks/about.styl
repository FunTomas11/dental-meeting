  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  @media screen and (max-width 600px)
    padding 25px
    margin 20px
    font-size 17px
    letter-spacing 0px

.ptss_border
  max-width: 150px;
  position: absolute;
  right: -45px;
  bottom: -40px;
  z-index: 10;
  transform: rotate(-23deg) scalex(-1);

.lublin_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  display block
  color #1e3b00
  margin-bottom 20px
  @media screen and (max-width 600px)
    font-size 30px

.lublin_info
  background #F8F8F8
  padding 50px
  margin-top -170px
  margin-bottom 30px
  font-size 20px
  color #525252
  font-family userfont
  text-align justify
  letter-spacing 1px
  margin-right 10px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  @media screen and (max-width 600px)
    padding 25px
    margin 20px
    font-size 17px
    letter-spacing 0px

.lublin_photo
  width 100%
  height auto
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.registration_packages
  text-align center
  width 100%
  color #1e3b00
  display flex
  flex-direction column
  align-items center

.package_title
  font-weight bold
  text-align center
  color #1e3b00

.package
  text-align justify
  color #525252
  min-height 400px
  min-width 400px
  max-width 500px
  background #F8F8F8
  margin-left 50px
  margin-right 50px
  margin-top 20px
  margin-bottom 90px
  padding 50px 0
  font-size 20px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  font-family userfont
  text-align center
  position: relative;
  @media screen and (max-width 600px)
    margin-top 0
    margin-left 20px
    margin-right 20px


.package_b_border
  max-height: 600px;
  position: absolute
  right -120px
  top -50px
  z-index: 10;

.package_a_border
  max-height: 600px;
  position: absolute
  left -149px
  bottom -68px
  z-index: 10;

.price
  font-family userfont
  font-size 50px
  color #1e3b00

.refund
  display flex
  justify-content center
  align-items center
  background #A0954B
  color white
  border-radius 10px
  width 400px
  height 60px
  padding 15px
  font-family userfont
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  margin 50px
  font-size 20px
  &:hover
    box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.35)
    transition 0.5s ease
    cursor pointer
  @media screen and (max-width 600px)
    width 200px
    margin-left 20px
    margin-right 20px

.signup
  background button-color
  border-radius 10px
  padding 15px
  width 600px
  height 100px
  font-family userfont
  color #1e3b00
  font-size 35px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  display flex
  &:hover
    box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.35)
    transition 0.5s ease
    cursor pointer
  @media screen and (max-width 600px)
    width 300px
    margin-left 20px
    margin-right 20px

.arrow-big
  font-size 30px

.arrow-small
  font-size 20px

.row-center
  display flex
  align-items center
  justify-content center
  flex 1 1 auto


.line
  height 2px !important
  width 80%
  color #525252
  margin-bottom 70px

.content
  display flex
  width: 100%
  justify-content center
  position: relative
  @media screen and (max-width 600px)
    flex-wrap wrap

.separated-title {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center
  .separator {
    width: 100px
    height: 100%
    @media screen and (max-width 400px) {
      width 90px
    }
  }
}

.reversed {
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
}

