.about
  width 100%
  justify-content center

.row1
  display flex
  position: relative;

  &:before
    position: absolute;
    content ''
    background-image url("../images/dist/background.svg")
    background-size cover
    width 100%
    height: 100%
    z-index -1
    opacity .10

  &__element
    margin 100px 0
    padding 50px
    background-color white


  @media screen and (max-width 400px)
    flex-wrap wrap
    margin 0
    &__element
      margin 50px 0
      padding 6px 12px
.row2
  display flex
  margin-left 50px
  margin-right 50px
  background white

.row3
