.about
  width 100%
  justify-content center

.row1
  display flex
  position: relative;

  &:before
    position: absolute;
    content ''
    background-image url("../images/dist/background.svg")
    background-size cover
    width 100%
    height: 100%
    z-index -1
    opacity .10

  &__element
    margin 0px 50px
    margin-top 120px
    margin-bottom 70px
    padding 50px
    background-color white


  @media screen and (max-width 400px)
    flex-wrap wrap
    margin 0
    &__element
      margin 50px 0
      padding 6px 12px
.row2
  display flex
  margin-left 50px
  margin-right 50px
  background white

.row3
  display flex
  background white
  flex-direction column
  margin-top 50px
  align-items center

.edsa_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  display block
  color #1e3b00
  margin-bottom 20px

.edsa_info
  flex 0 1 auto
  max-width 700px
  font-size 20px
  color #525252
  text-align justify
  letter-spacing 1px
  margin-right 50px
  position relative
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  @media screen and (max-width 400px)
    margin 0

