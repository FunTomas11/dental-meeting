.about
  width 100%
  justify-content center
  @media screen and (max-width: 600px)
    flex-wrap wrap

.row1
  display flex
  position: relative;

  &:before
    position: absolute;
    content ''
    background-image url("../images/dist/background.webp"), url("..images/dist/jpg/background.png")
    background-size cover
    width 100%
    height: 100%
    z-index -1
    opacity .10

  &__element
    margin 0px 50px
    margin-top 120px
    margin-bottom 70px
    padding 50px
    background-color white


  @media screen and (max-width 600px)
    flex-wrap wrap
    &__element
      padding 6px 12px
      margin 20px
    
.row2
  display flex
  margin-left 50px
  margin-right 50px
  background white
  @media screen and (max-width 600px)
    margin 0px

.row3
  display flex
  background white
  flex-direction column
  margin-top 50px
  align-items center

.bold_text
  color #1e3b00
  font-weight bold

.edsa_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  color #1e3b00
  margin-bottom 20px
  @media screen and (max-width 600px) {
    text-align center
    font-size 38px
    color accent-color
  }

.edsa_info
  flex 0 1 auto
  max-width 700px
  font-size 20px
  color #525252
  text-align justify
  letter-spacing 1px
  margin-right 50px
  position relative
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  @media screen and (max-width 600px)
    width 100%
    padding 25px
    margin 20px
    font-size 17px
    letter-spacing 0px

.edsa_border
  max-height: 202px;
  max-width: 331px;
  position: absolute;
  right: -79px;
  top: -58px;
  z-index: 10;
  transform: rotate(206deg);

.ptss_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  color #1e3b00
  margin-bottom 20px
  @media screen and (max-width 600px) {
    text-align center
