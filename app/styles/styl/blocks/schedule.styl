.schedule
  display flex-box
  margin 10px
  width 100%

.schedule_info_meeting
  display flex

.schedule_info
  background ghostwhite
  padding 10px
  font-size 20px
  letter-spacing 1px
  margin-right 150px
  margin-left 50px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.schedule_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  display block
  margin-bottom 20px
.meeting_venues
  display block
  background ghostwhite
  padding 10px
  margin-right 50px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.meeting_venues_title
  font-size 35px
  margin-left 15px
  font-family userfont

.img
  margin 5px
  border-radius 15px

.img_link
  display grid
  text-align center
  font-family userfont
  font-size 35px
  margin-left 15px
  margin-right 15px

.meeting_venues_hotel
  display flex
  wrap-option flex

.workshop_row
  display flex

.workshop
  margin-left 20%
  margin-top 45px
  background ghostwhite
  font-family userfont
  font-size 80px
  letter-spacing 25px
  text-align center
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.workshop_text
  padding-left 25px

.workshop_row :hover
  background lightgray

.social_program_div
  display flex

.social_program
  margin-left auto
  margin-right 20%
  margin-top 45px
  font-family userfont
  font-size 80px
  text-align center
  letter-spacing 12px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.social_program_text
  padding-left 10px

.social_program_div :hover
  background lightgrey