.schedule
  display flex-box
  width 100%

.schedule_info_meeting
  display flex

.schedule_info
  background #F8F8F8
  padding 10px
  font-size 20px
  letter-spacing 1px
  font-family userfont
  margin-right 100px
  margin-left 50px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.schedule_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  font-family userfont
  display block
  margin-bottom 20px
  text-shadow: 3px 3px lightgray;
.meeting_venues
  display block
  background #F8F8F8
  padding 10px
  margin-right 50px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.meeting_venues_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  font-family userfont
  display block
  margin-bottom 20px

.img
  margin 5px
  border-radius 15px

.img_link
  display grid
  text-align center
  font-family userfont
  font-size 35px
  margin-left 15px
  margin-right 15px

.meeting_venues_hotel
  display flex
  wrap-option flex

.workshop_row
  display flex

.workshop
  margin-left 20%
  margin-top 45px
  background #F8F8F8
  font-family userfont
  font-size 80px
  letter-spacing 25px
  text-align center
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.workshop_text
  padding-left 25px

.workshop_row :hover
  background lightgray

.social_program_div
  display flex

.social_program
  margin-left auto
  margin-right 20%
  margin-top 45px
  margin-bottom 45px
  font-family userfont
  font-size 80px
  text-align center
  letter-spacing 12px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.social_program_text
  padding-left 10px

.social_program_div :hover
  background lightgrey

.ig_fb
  display inline-flex
  width 100%
  justify-content center
  align-items center

.ig_link
  margin-bottom 25px
  margin-right 5%

.fb_link
  margin-bottom 25px
  margin-left 5%

.img_media
  border-radius 50%