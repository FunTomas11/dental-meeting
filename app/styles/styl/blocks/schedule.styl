.schedule
  display flex-box
  width 100%

.schedule_info_meeting
  display flex
  
  @media screen and (max-width 600px)
    flex-wrap wrap

.schedule_info
  background #F8F8F8
  padding 50px
  font-size 20px
  letter-spacing 1px
  font-family userfont
  margin-right 100px
  margin-left 50px
  color #525252
  text-align justify
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  @media screen and (max-width 600px)
    margin-right 50px

.schedule_title
  font-size 50px
  font-weight bold
  color #1e3b00
  text-transform: uppercase;
  width 100%
  font-family userfont
  display block
  margin-bottom 20px
  // text-shadow: 3px 3px lightgray;

.meeting_venues
  display block
  background #F8F8F8
  padding 50px
  margin-right 50px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)

.meeting_venues_title
  font-size 50px
  font-weight bold
  text-transform: uppercase;
  width 100%
  font-family userfont
  display block
  margin-bottom 20px
  color #1e3b00

.img
  margin 5px
  border-radius 15px
  height 375px
  width 375px

.img_link
  display grid
  text-align center
  font-family userfont
  font-size 20px
  margin-left 15px
  margin-right 15px
  letter-spacing 1px
  color #1e3b00

.meeting_venues_hotel
  display flex
  @media screen and (max-width 600px)
    flex-wrap wrap

.workshop_row
  display flex
  margin-top 50px

.workshop
  margin-left 20%
  margin-top 45px
  background #F8F8F8
  font-family userfont
  font-size 80px
  letter-spacing 19px
  text-align center
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  border-radius 10px
  @media screen and (max-width: 600px)
    margin-left 0

.workshop_text
  padding-left 25px
  color #1e3b00

.workshop_row :hover
  background button-color
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.35)

.social_program_div
  display flex
  margin-bottom 50px

.social_program
  margin-left auto
  margin-right 15%
  margin-top 45px
  margin-bottom 45px
  font-family userfont
  font-size 80px
  text-align center
  letter-spacing 13px
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.10)
  border-radius 10px
  @media screen and (max-width: 600px)
    margin-right 0

.social_program_text
  padding-left 10px
  color #1e3b00

.social_program_div :hover
  background button-color
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.01), 0 6px 20px 0 rgba(0, 0, 0, 0.35)
