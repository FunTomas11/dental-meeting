.bg-image {
  background-image url("../images/dist/home.webp")
  min-height: calc(100vh + 37.5px)
  width 100%
  z-index -1
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
}

.home
  flex-direction column
  align-items center
  justify-content space-between
  line-height 90px
  display flex
  min-height calc(100vh + 37.5px)
  &__description
    padding-bottom: 3rem;
  @media screen and (max-width 600px)
    min-height 100vh
    
.logo
  margin-top -60px
  height auto
  width 100%
  max-width 480px
  @media screen and (max-width 600px)
    margin 0 auto
  
.date
  font-size 5rem
  color #fff
  @media screen and (max-width 700px)
    font-size 3rem

.description
  font-size: 4rem
  color accent-color
  text-transform uppercase
  @media screen and (max-width 700px)
    font-size 2.5rem

.date, .description
  font-family accent-font
  letter-spacing 5px
  font-weight: 600
  text-align center

