.bg-image {
  /* The image used */
  background-image url("../images/dist/home.webp")
  
  
  /* Add the blur effect */
  //filter: blur(4px);
  
  /* Full height */
  min-height: 100vh;
  width 100%
  z-index -1
  
  /* Center and scale the image nicely */
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
}

.home
  flex-direction column
  align-items center
  line-height 90px
  display flex
  min-height 100vh
  
.logo
  margin-bottom -70px
  margin-top -60px
  height auto
  width 100%
  max-width 580px
  @media screen and (max-width 600px)
    margin 0 auto
  
.date
  font-size 5rem
  color #fff
  @media screen and (max-width 600px)
    font-size 3rem

.description
  font-size: 4rem
  color accent-color
  text-transform uppercase
  @media screen and (max-width 600px)
    font-size 2rem

.date, .description
  font-family accent-font
  letter-spacing 5px
  font-weight: 600
  text-align center
